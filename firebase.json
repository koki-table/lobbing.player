{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{ 
      "source" : "**", 
      "headers" : [{ 
        "key" : "Cache-Control", 
        "value" : "max-age=3600" 
      }] 
    }] 
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
